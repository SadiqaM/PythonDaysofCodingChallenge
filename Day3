# Write a function to count the number of vowels in a given string

def count_vowels(string):
    if type(string) != str :
        return "Input is not a string, please enter valid string."
    else:
        string = string.lower()
        total = string.count("a") + string.count("e")+string.count("i")+string.count("o")+string.count("u")
        return f"Number of vowels in :: {string} == {total}"

#Sample function call
print(count_vowels("This is a test to count the vowels in a string"))
